    </div>
      <div class="row actividades">
          <div class="col-md-12 child">
          </div><!--child-->

          
      		<div class="col-md-8">
  				
                <div id="cbp-fwslider" class="cbp-fwslider">
                    <ul>

                              {% if activity.getGaleryLength >= 1%}

                                    {% if activity.getGalery %}    

                        <li><a href="#"> <img src="{{ activity.getFoto.getWebPathFile }}" alt="{{ activity.getName }}" /></a></li>

                                    {% endif %}


                            {% endif %} 
                    </ul>
                    
                    
                </div><!--silder detalle-->
       		
            </div>
            
              
            <div class="col-md-4">
            	<h1>{{activity.getName}}</h1>
                	<div>
            		<p>{{activity.getDescription}}</p></div>
                    
                    <div class="costo">
                    <h3>Costos:</h3>
                    <p>Adultos: ${{activity.getCosta}}</p>
                    <p>Niños: ${{activity.getCost}}</p>
                    </div>
                     <div class="calificacion">
