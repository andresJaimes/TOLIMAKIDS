{% extends '::frontend.html.twig' %}
{% block body %}
{% block javascript %}
{{parent()}}
 <script type="text/javascript" src="{{ asset ('bundles/frontfrontend/js/jquery.cbpFWSlider.min.js')}}"></script>
 <script type="text/javascript" src="{{ asset ('bundles/frontfrontend/js/jquery.raty.js')}}"></script>
  <link href="{{ asset ('bundles/frontfrontend/css/rating.css')}}" rel="stylesheet" type="text/css">
