<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="ItoSoftware\Base\ModelBundle\Entity\ActivityRepository" name="ItoSoftware\Base\ModelBundle\Entity\Activity">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="name" type="string" column="name" length="255"/>
    <field name="description" type="string" column="description" length="255"/>
    <field name="registredDate" type="datetime" column="registred_date"/>
    <field name="active" type="smallint" column="active"/>
    <field name="date" type="datetime" column="date"/>
   
    <many-to-one field="places" target-entity="Activity">
        <join-column name="places_id" referenced-column-name="id" />
    </many-to-one>
    
    <many-to-one field="plan" target-entity="Activity">
        <join-column name="plan_id" referenced-column-name="id" />
    </many-to-one>
    

  </entity>
</doctrine-mapping>
